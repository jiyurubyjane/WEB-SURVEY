<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hasil Survei</title>
</head>
<body>
    <!-- Menampilkan nama event yang sedang dilihat -->
    <h1>Data Survei untuk: <%= event.nama_event %></h1>
    <hr>
    
    <table border="1" cellpadding="5" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>ID Survei</th>
                <th>Asal Kota</th>
                <th>Tujuan Utama?</th>
                <th>Lama Tinggal (hari)</th>
                <th>Jml Rombongan</th>
                <th>Belanja Akomodasi</th>
                <th>Belanja Makan</th>
                <!-- Tambahkan kolom lain jika perlu -->
            </tr>
        </thead>
        <tbody>
            <% if (typeof surveys !== 'undefined' && surveys.length > 0) { %>
                <% surveys.forEach(survey => { %>
                    <tr>
                        <td><%= survey.id %></td>
                        <td><%= survey.asal_kota %></td>
                        <td><%= survey.tujuan_utama %></td>
                        <td><%= survey.lama_tinggal %></td>
                        <td><%= survey.jumlah_rombongan %></td>
                        <td><%= survey.belanja_akomodasi %></td>
                        <td><%= survey.belanja_makan_minum %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="7" style="text-align: center;">Belum ada data survei untuk event ini.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <br>
    <a href="/events">Kembali ke Manajemen Event</a>
</body>
</html>